<form role="form">
  <div class="form-group has-feedback">
    <label class="sr-only"  for="username"><%= t('forms.username') %></label>
    <span class="glyphicon glyphicon-user form-control-feedback"></span>
    <input type="text" class="form-control" id="username" placeholder="<%= t('forms.username') %>">
  </div>
  <div class="form-group has-feedback">
    <label class="sr-only" for="password"><%= t('forms.password') %></label>
    <input type="password" class="form-control" id="password" placeholder="<%= t('forms.password') %>">
    <span class="gde-tooltip glyphicon glyphicon-question-sign form-control-feedback" data-toggle="tooltip" data-placement="right" title="<%= t('forms.password_tip') %>"></span>
  </div>
  <button type="submit" class="btn btn-lg btn-block btn-primary"><%= t('forms.login') %></button>
  <div class="row-space-1"></div>
  <a href="#"><%= t('forms.dac_login') %></a>
  <br>
  <a href="#"><%= t('forms.forgot_password') %></a>
</form>