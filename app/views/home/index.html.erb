<div class="row-space-2"></div>
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <img src="http://placehold.it/250/0D8DBC&text=GDE" alt="GDE" class="img-circle">
  </div>
  <div class="col-md-12 text-center">
    <h1> <%= t('content.home_msg_1') %> </h1>
  </div>
</div>
<div class="row-space-2"></div>
<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= simple_form_for(@user, as: 'user', url: session_path('user')) do |f| %>
      <%= f.input :email, label_html: { class: 'sr-only' } %>
      <%= f.input :password, label_html: { class: 'sr-only' } %>
      <%= f.button :submit, class: 'btn btn-lg btn-block btn-primary' %>
    <% end %>
    <div class="row-space-1"></div>
    <a href="#"><%= t('forms.dac_login') %></a>
    <br>
    <%= link_to t('forms.forgot_password'), new_password_path('user') %>
  </div>
</div>
<div class="row-space-2"></div>
<div class="jumbotron">
  <h2><%= t('content.home_msg_2') %></h2>
  <div class="row">
    <div class="col-md-4 text-center">
      <span class="fa-stack fa-lg">
        <i class="fa fa-circle-o fa-stack-2x"></i>
        <i class="fa fa-bars fa-stack-1x"></i>
      </span>
      <h3>Planejar suas matérias</h3>
      <h5>Utilize nosso fácil sistema de organização tchubirubi</h5>
    </div>
  </div>
</div>